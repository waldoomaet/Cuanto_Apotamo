<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage
    x:Class="Cuanto_Apotamo.Views.Root"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <FlyoutPage.Flyout>
        <ContentPage Title="Menu">
            <StackLayout>
                <Button Text="Main Page" Command="{Binding NavigateCommand}" CommandParameter="Navigation/Main"/>
                <Button Text="SignUp Page" Command="{Binding NavigateCommand}" CommandParameter="Navigation/SignUp"/>
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>
</FlyoutPage>