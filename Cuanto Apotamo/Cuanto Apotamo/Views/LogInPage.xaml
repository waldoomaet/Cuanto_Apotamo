<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Cuanto_Apotamo.Views.LogInPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="White">
    <StackLayout
        Margin="0,50,0,30"
        Padding="30"
        HorizontalOptions="Center"
        VerticalOptions="StartAndExpand">
        <Image
            HorizontalOptions="Center"
            Source="main_icon"
            WidthRequest="600" />

        <Entry
            Margin="5,0,5,20"
            HeightRequest="40"
            Placeholder="Username"
            PlaceholderColor="Black"
            Text="{Binding Credentials.UserName}"
            TextColor="Black" />

        <Entry
            Margin="5,0,5,20"
            HeightRequest="40"
            IsPassword="True"
            Placeholder="Password"
            PlaceholderColor="Black"
            Text="{Binding Credentials.Password}"
            TextColor="Black" />

        <Button
            Margin="0,0,0,20"
            BackgroundColor="Black"
            Command="{Binding LogInCommand}"
            FontAttributes="Bold"
            FontSize="Large"
            HorizontalOptions="FillAndExpand"
            Text="Login"
            TextColor="White" />

        <Label HorizontalOptions="Center">
            <Label.FormattedText>
                <FormattedString>
                    <Span FontSize="Medium" Text="Don't have an account? " TextColor="Black"/>
                    <Span
                        FontSize="Medium"
                        Text="Create one!"
                        TextColor="Blue"
                        TextDecorations="Underline">
                        <Span.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CreateAccountCommand}" />
                        </Span.GestureRecognizers>
                    </Span>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </StackLayout>
</ContentPage>