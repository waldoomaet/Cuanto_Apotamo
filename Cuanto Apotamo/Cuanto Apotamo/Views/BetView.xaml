<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cuanto_Apotamo.Views.BetView"
             xmlns:control="clr-namespace:Plugin.Segmented.Control;assembly=Plugin.Segmented"
             BorderColor="Gray"
             CornerRadius="5"
             Padding="8"
             Margin="10">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0"   Grid.ColumnSpan="6" Text="{Binding Title}"      Style="{StaticResource TitleLabelStyle}" />
        <BoxView Grid.Row="1" Grid.ColumnSpan="6" Color="Gray" HeightRequest="2" HorizontalOptions="Fill" />
        <Label Grid.Row="2" Grid.ColumnSpan="6"  Style="{StaticResource TitleLabelStyle}">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Cierre de apuesta: " />
                    <Span Text="{Binding BetClose}"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"  Style="{StaticResource TitleLabelStyle}">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Total apostado: $" />
                    <Span Text="{Binding TotalBets}"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Label Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="3"  Style="{StaticResource TitleLabelStyle}">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Total jugadores: " />
                    <Span Text="{Binding TotalPlayers}"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <control:SegmentedControl
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            x:Name="SegmentedControl"
            SelectedSegment="0"
            SegmentSelectedCommand="{Binding SelectCommand}"
            TintColor="Blue"
            SelectedTextColor="White"
            TextColor="Black"
            DisabledColor="Gray">
            <control:SegmentedControl.Children>
                <control:SegmentedControlOption Text="option 1"/>
                <control:SegmentedControlOption Text="option 2"/>
                <control:SegmentedControlOption Text="option 3"/>
            </control:SegmentedControl.Children>            
        </control:SegmentedControl>
        <Label Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="4" Text="{Binding Label}" Style="{StaticResource TitleLabelStyle}"/>
    </Grid>

</Frame>