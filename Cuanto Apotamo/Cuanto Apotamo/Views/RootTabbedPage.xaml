<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    x:Class="Cuanto_Apotamo.Views.RootTabbedPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Cuanto_Apotamo.Views">
    <TabbedPage.Children >
        <ContentPage Title="Dos">
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <views:BetView BindingContext="{Binding Bet}" />
            </StackLayout>
        </ContentPage>
        <ContentPage Title="Uno">
            <CollectionView ItemsSource="{Binding Bets}">
                <CollectionView.ItemTemplate>
                    <DataTemplate >
                        <StackLayout>
                            <views:BetView BindingContext="{Binding}"/>
                            <Label/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ContentPage>
        <ContentPage Title="Tres">
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <views:BetView BindingContext="{Binding Bet}" />
            </StackLayout>
        </ContentPage>
    </TabbedPage.Children>
</TabbedPage>